mixin offer(img, title, textArr, isRellax= false, modif= null, target="modal-callback")
  .offer(class= modif)
    .container
      .offer__inner.wrapper-round
        if isRellax
          img(src=`assets/img/svg/${img}.svg`, width="400", height="363", alt="", loading="lazy")
        else
          img(src=`assets/img/svg/${img}.svg`, width="400", height="363", alt="", loading="lazy")
