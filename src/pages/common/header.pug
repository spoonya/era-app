mixin header(modif= null)
  header#header.header(class= modif)
    .container
      .header__inner
        .header__top
          +logo
          .header__group
            .header__lang
              img(src="assets/img/svg/globe.svg", width="22", height="19", alt="")
              button#lang-button(type="button")
                span Ru
                <svg width="17" height="15" viewBox="0 0 17 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1.40539 1.25L8.7666 14L16.1278 1.25H1.40539Z" fill="#FFB700" stroke="#162A3C"/>
                </svg>
              ul#lang-list.header__lang-list
                li.active
                  a(href="#" lang="ru") Ru
                li
                  a(href="#" lang="en") En
            button#burger-button.burger-button(aria-label="Open menu")
              span
        #header-burger.header__burger
          .header__burger-links
            nav.header__burger-menu
              ul.header__burger-list
                li
                  a(href="services.html") Услуги
                  <svg width="17" height="15" viewBox="0 0 17 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1.40539 1.25L8.7666 14L16.1278 1.25H1.40539Z" fill="#FFB700" stroke="#162A3C"></path>
                  </svg>
                  ul
                    li
                      a(href="strategy.html") Цифровая стратегия
                    li
                      a(href="optimization.html") Оптимизация магазина приложений
                    li
                      a(href="design.html") UI/UX дизайн
                    li
                      a(href="dev-mobile.html") Разработка мобильных приложений
                    li
                      a(href="dev-web.html") Разработка  Web-приложений
                    li
                      a(href="motion.html") Motion дизайн
                    li
                      a(href="support.html") Поддержка, хостинг и управление
                    li
                      a(href="dev-ops.html") Услуги Dev Ops
                    li
                      a(href="testing.html") Тестирование
                li
                  a(href="portfolio.html") Портфолио
                li
                  a(href="company.html") О компании
                li
                  a(href="career.html") Карьера
            .header__burger-contact
              +contactLinks
              +modalButton('Связатья с нами', 'button--secondary')
          .header__burger-form
            .title.title--light
              h2
                |Начните свой проект&nbsp;
                span.title__part-yellow вместе с нами
            +contactForm('header')
