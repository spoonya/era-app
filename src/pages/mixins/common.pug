mixin crumbs(arrLinks, modif= null)
  .crumbs(class= modif)
    .crumbs__inner
      ul
        li: a(href='index.html') Главная
        for link in arrLinks
          if link.href
            li: a(href= link.href)= link.name
          else
            li: span= link.name

mixin offer(img, title, textArr, isRellax= false, modif= null)
  .offer(class= modif)
    .container
      .offer__inner.wrapper-round
        if isRellax
          img(src=`assets/img/svg/${img}.svg`, width="400", height="363", alt="", loading="lazy")
        else
          img(src=`assets/img/svg/${img}.svg`, width="400", height="363", alt="", loading="lazy")
        .offer__descrip
          .offer__top
            .title
              h3= title
            .text.offer__text
              each txt in textArr
                p= txt
          .offer__bot
            +button('Связаться с нами')

